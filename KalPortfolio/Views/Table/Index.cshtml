
@{
    ViewData["Title"] = "Index";
    
}

@model IEnumerable<DataEntities.UserMessage>;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=2.0" />
    <title>KalPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <link href="~/css/site.css" rel="stylesheet" />  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        function search()
        {
            
           
            //$.ajax({
            //    url: "/Table/Index?name=" + test,
            //    method: "GET", 
            //    data: {
                    
            //    },
            //    success: function (response) {
            //        alert("success")
            //    },
            //    error: function () {
            //        alert("error");
            //    }

            //});


            location.href = '/Table/Index?name=' + document.querySelector('#search-for-message').value;
        }

        function deleteMessage(){

            location.href = '/Table/Delete?id=' + document.querySelector('#id').value;
        }

        function detailsMessage(){
            location.href = '/Table/Details?id=' + document.querySelector('#details').value
        }
    </script>

</head>
<body class="table">
    <header>
        <a href="#home-link" class="skip">Skip navigation</a>
        <nav id="nav-in" class="navbar">
            <div class="container-fluid d-block ">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="Index">K</a>
                </div>

                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav d-inline-block ">
                        
                        
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <section class="give-margins">

        <div class="message-editing">
            <div class="row">
            
                   <div class="col-12">              
                    <form>
                        <input type="text" class="search-message" id="search-for-message" placeholder="Search" />
                        <button type="button" class="search-message" onclick="search()">Search</button>
                    </form>
                </div>
            </div>
        </div> 
       
       <table class="message-table">
            <thead>
                <tr>                    
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Edit</th>
                </tr>               
            </thead>
            <tbody>
                
                @foreach(var message in Model)
                {
                    <tr id="message-row">
                        

                        <td>@Html.DisplayFor(modelItem => message.FirstName)</td>

                        <td>@Html.DisplayFor(modelItem => message.LastName)</td>

                        <td><a class="mail-to" href="mailto:@Html.DisplayFor(modelItem => message.Email)">Respond To: @Html.DisplayFor(modelItem => message.Email)</a></td>

                        <td>@Html.DisplayFor(modelItem => message.Subject)</td>

                        <td class="text-overflow">@Html.DisplayFor(modelItem => message.Message)</td>

                        <td>
                            @using (Html.BeginForm("Table", "Delete"))
                            {
                                <input type="hidden" name="MessageId" class="edit-btn" id="id" value="@Html.DisplayFor(modelItem => message.Id)" />
                                <input type="button" value="Delete" class="edit-btn" onclick="deleteMessage()"/>
                            }
                        </td>

                        <td>
                            @using (Html.BeginForm("Table", "Details"))
                            {
                                <input type="hidden" name="MessageDetails" class="edit-btn" id="details" value="@Html.DisplayFor(modelItem => message.Id)" />
                                <input type="button" value="Details" class="edit-btn" onclick="detailsMessage()"/>
                            }
                        </td>
                        

                        
                    </tr>
                }
                
            </tbody>
        </table>

       
    </section>
    </body>
</html>


