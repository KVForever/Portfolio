@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model KalPortfolio.Models.UserLoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Users can create a create and than view Kalkidan's portfolio site." />
    <title>Kalkidan's Portfolio - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <script type="text/javascript">
        function createAccountBtn(){
            location.href = '/Login/CreateAccount';
        }

    </script>

</head>
<body class="login">
    <section>
        <div class="login-focus">            
            <div class="row">                
                <div asp-action="login" id="login-form">                      
                    
                    <div class="login-Heading">
                        <p class="display-3">Welcome!</p>
                    </div>
                    <div>
                        <form asp-action="Login" asp-controller="Login" method="post">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <label asp-for="@Model.Username" class="login-label">Username</label>
                                <input asp-for="@Model.Username" type="text" class="login-input" placeholder="Username" required />
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <label asp-for="@Model.Password" class="login-label">Password</label>
                                <input asp-for="@Model.Password" type="password" class="login-input" placeholder="Password" required />
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="hidden" asp-for="@Model.ReturnUrl" id="returnurl" />
                            </div>
                            <div class="row">
                                <button type="submit" id="login" placeholder="Login">Login</button>
                            </div>
                            <div class="row">
                                <button type="button" onclick="createAccountBtn()" id="create-account">Create Account</button>
                            </div>
                        </form>
                    </div>
                </div>                                   
            </div>          
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</body>
</html>
