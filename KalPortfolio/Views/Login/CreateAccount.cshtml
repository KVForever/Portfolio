@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model KalPortfolio.Models.CreateAccount

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Kalkidan's Portfolio - Create Account</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">        
        <link href="~/css/site.css" rel="stylesheet" />       
    </head>
    <body class="create-account-background">
        <section>
        <div class="create-account-focus">
            <div class="col-6">
                <div class="create-account-form" >
                    
                    <form asp-action="CreateAccount" asp-controller="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <input type="email" asp-for="@Model.Email" class="create-account-field" id="create-account-email" placeholder="Email" required/>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="text" asp-for="@Model.Username" class="create-account-field" id="create-account-username" placeholder="Username" required/>
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="password" asp-for="@Model.Password" class="create-account-field" id="create-account-password" placeholder="Password" required/>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div> 
                        <div class="row">
                            <input type="password" asp-for="@Model.ConfirmPassword" class="create-account-field" id="confirm-account-password" placeholder="Confirm Password" required/>
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="text" asp-for="@Model.FirstName" class="create-account-field" id="create-account-firstname" placeholder="First Name" required/>
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <input type="text" asp-for="@Model.LastName" class="create-account-field" id="create-account-lastname" placeholder="Last Name" required/>
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="hidden" asp-for="@Model.SelectedRoles" value="2" />
                            <span asp-validation-for="@Model.SelectedRoles" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <button type="submit" class="create-account-field" value="Create Account">Submit</button>
                        </div>
                        
                    </form>
                    
                </div>
            </div>
        </div>
        </section>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    </body>
</html>
