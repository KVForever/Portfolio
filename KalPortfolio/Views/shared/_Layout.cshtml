                        <li><a href="/Home/Account" aria-label="Go to account page">Account</a></li>
                    </ul>
                    <div class="logout">
                        <form asp-action="Logout" asp-controller="Home" method="post">
                            <button type="submit" value="Logout" id="logout-btn">Logout</button>
                        </form>
                    </div>
                </div>

            </nav>
        </header>
        <div class="container">
            <main role="main">
                @RenderBody()
