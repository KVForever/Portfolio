<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=2.0" />
    <title>KalPortfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>    
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <nav id="nav-in" class="navbar">
            <div class="container-fluid d-block ">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="Index">K</a>
                </div>

                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav d-inline-block ">
                        <li class="active"><a href="/Home/Index"><underline>Home</underline></a></li>
                        <li><a href="/Home/Contact"><underline>Contact</underline></a></li>
                        <li><a href="/Home/Projects"><underline>Projects</underline></a></li>
                        <li><a href="/Home/Resume"><underline>Resume</underline></a></li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
            <footer id="footer" class="container row">
                <div class="col-3">
                    <p>&copy; @DateTime.Now.Year - My Portfolio</p>
                </div>
                <div class="col-7">
                    <p id="find-me">Find Me On:</p>
                </div>
                <div class="col-2">
                    <a href="https://github.com/kvassar" target="_blank" rel="noreferrer noopener"><img src="https://th.bing.com/th/id/OIP.50d_SoV-XYkRn9GJhvb5NQHaFQ?pid=ImgDet&rs=1" id="footer-image" class="img-responsive" /></a>
                </div>
            </footer>
        </main>   
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
