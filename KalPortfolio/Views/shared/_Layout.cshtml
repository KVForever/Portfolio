@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="View Kalkidans projects, contact information, and get to know who Kalkidan is." />
        <title>Kalkidan's Portfolio - Home</title>
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </head>

    <body>
    <header>
        <a type="button" href="/Home/Home#home-link" class="btn btn-info skip">Skip navigation</a>

        <nav class="navbar navbar-expand-lg navbar-dark mx-3 " id="nav-in">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand" href="/Home/Home">K</a>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active"><a class="nav-link" href="#home-link" aria-label="Go to the top of the home page">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact-link" aria-label="Go to the contacts section.">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" href="#projects-link" aria-label="Go to the projects section.">Projects</a></li>
                        <li class="nav-item"><a class="nav-link disabled" href="#resume-link" aria-label="Currently disabled.">Resume</a></li>
                        <li class="nav-item"><a class="nav-link disabled" href="/Home/Account" aria-label="Currently disabled.">Account</a></li>
                    </ul>
                    @Html.AntiForgeryToken()
                    <form asp-action="Logout" asp-controller="Home" method="post" class="">

                        <button class="btn btn-outline-danger" type="submit" value="Logout">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg> Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>

    </header>
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>           
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/site.js"></script>
        @RenderSection("Scripts", required: false)
        
    </body>
</html>
